<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/bootstrap-theme-min.css")
    @Styles.Render("~/Content/Site.css")
</head>
<body>
    <!-- menu bar-->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="hidden-xs">@Html.ActionLink("Glenn's Site", "Index", "Home", null, new { @class = "navbar-brand text-muted"})</div>
            <div class="collaspe navbar-collaspe media-bottom">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown">
                        <a data-toggle="dropdown" data-target="#">Electronic Detective<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Play the Game", "ElectronicDetective", "ElectronicDetective")</li>
                            <li>@Html.ActionLink("How to Play", "HowToPlay", "ElectronicDetective")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Today's Joke", "TodaysJoke", "TodaysJoke")</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- place space between menu and body -->
    <div class="row">
        <div class="col-lg-12" style="height:80px"></div>
    </div>

    <!-- body and page footer-->
    <div class="container">

        <div class="jumbotron">
            @RenderBody()
        </div>

        <div class="modal-footer">
            &copy; 2016 Glenn Seplowitz - @DateTime.Now.ToLongDateString() - @DateTime.Now.ToLongTimeString()
        </div>
    </div>
    @Scripts.Render("~/Scripts/jquery-1.9.1.min.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")

</body>
</html>
